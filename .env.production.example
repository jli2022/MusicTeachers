# Production Environment Configuration

# Database
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# NextAuth
NEXTAUTH_SECRET="your-production-secret-here"
NEXTAUTH_URL="https://music-teachers.vercel.app"

# Admin User (for initial setup)
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="secure-admin-password"
ADMIN_NAME="System Administrator"

# Feature Flags for Production
NODE_ENV="production"
ENABLE_DEMO_USERS="false"
ENABLE_DATABASE_INIT="false"
ENABLE_MIGRATION_ENDPOINTS="false"

# Optional: Google OAuth (if used)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional: File Upload
MAX_FILE_SIZE="10MB"

# Security
# Set to true only for initial deployment, then disable
ENABLE_DATABASE_INIT="true"